<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.CareProviderRecordView">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/care_record_title"
            android:layout_width="308dp"
            android:layout_height="68dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="TextView"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/care_record_comment"
            android:layout_width="310dp"
            android:layout_height="98dp"
            android:layout_below="@+id/care_record_timestamp"
            android:layout_alignLeft="@id/care_record_title"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="15dp"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:text="TextView"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/care_record_timestamp"
            android:layout_width="310dp"
            android:layout_height="68dp"
            android:layout_below="@+id/care_record_title"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="13dp"
            android:text="TextView"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/body_text"
            android:layout_width="182dp"
            android:layout_height="43dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="204dp"
            android:text="TextView"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/body_pic"
            android:layout_width="106dp"
            android:layout_height="172dp"
            android:layout_alignBottom="@+id/body_text"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="44dp"
            android:layout_marginBottom="-132dp"
            android:src="@drawable/bodylocationfront" />

        <TextView
            android:id="@+id/geo_text"
            android:layout_width="340dp"
            android:layout_height="31dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="15dp"
            android:text="TextView"
            android:textSize="14sp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>