<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CareProviderProblemView">

    <Button
        android:id="@+id/return_to_problem_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/back_from_problem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="returnToProblemsList"/>

    <Button
        android:id="@+id/add_comment_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/provider_add_comment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="addCareProviderComment"/>

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/problem_photos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:srcCompat="@android:color/holo_blue_light"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="300dp"
                android:focusable="true"
                android:onClick="viewProblemsPhotos"/>

            <TextView
                android:id="@+id/viewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="50dp"
                android:text="@string/title_care_view"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="50dp"
                tools:layout_editor_absoluteY="75dp" />

            <TextView
                android:id="@+id/viewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="100dp"
                android:text="@string/date_started_care_view"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="50dp"
                tools:layout_editor_absoluteY="75dp" />

            <TextView
                android:id="@+id/viewDes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="150dp"
                android:text="@string/description_care_view"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="50dp"
                tools:layout_editor_absoluteY="32dp" />

            <TextView
                android:id="@+id/viewRecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="325dp"
                android:text="@string/record_strict_care_view"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="124dp"
                tools:layout_editor_absoluteY="212dp" />

            <TextView
                android:id="@+id/subRecords"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="375dp"
                android:text="@string/a_record_care_view"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="124dp"
                tools:layout_editor_absoluteY="212dp" />
        </RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>